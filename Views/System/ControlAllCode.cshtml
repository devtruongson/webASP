@{
    var data = ViewBag.Data as List<AllCodeDTO>;

}
<div class="container mt-5">
    <h1 class="text-center mb-4">Quản lý dữ liệu chung</h1>

    <form asp-action="HandleData" method="post" asp-controller="AllCode" id="addForm" class="mb-5">
        <div class="form-group">
            <label for="type">Type</label>
            <input type="text" class="form-control" id="type" name="type" required>
        </div>
        <div class="form-group">
            <label for="content_title">Content Title</label>
            <input type="text" class="form-control" id="content_title" name="content_title" required>
        </div>
        <div class="form-group">
            <label for="content_detail">Content Detail</label>
            <textarea class="form-control" id="content_detail" name="content_detail" rows="3" required></textarea>
        </div>
        <div class="form-group">
            <label for="code">Code</label>
            <input type="text" class="form-control" id="code" name="code" required>
        </div>
        <button type="submit" class="btn btn-primary">Add</button>
    </form>

    <form asp-action="UpdateData" method="post" asp-controller="AllCode" id="updateForm" class="mb-5">
        <div class="form-group">
            <label for="id">Id</label>
            <input type="text" class="form-control" id="id" name="id" required>
        </div>
        <div class="form-group">
            <label for="type">Type</label>
            <input type="text" class="form-control" id="type" name="type" required>
        </div>
        <div class="form-group">
            <label for="content_title">Content Title</label>
            <input type="text" class="form-control" id="content_title" name="content_title" required>
        </div>
        <div class="form-group">
            <label for="content_detail">Content Detail</label>
            <textarea class="form-control" id="content_detail" name="content_detail" rows="3" required></textarea>
        </div>
        <div class="form-group">
            <label for="code">Code</label>
            <input type="text" class="form-control" id="code" name="code" required>
        </div>
        <button type="submit" class="btn btn-warning">Update</button>
    </form>

    <form asp-action="DeleteData" method="post" asp-controller="AllCode" id="deleteForm" class="mb-5">
        <div class="form-group">
            <label for="id">Id</label>
            <input type="text" class="form-control" id="id" name="id" required>
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>

    <h2 class="text-center mb-4">Dữ liệu chung</h2>
    <table class="table table-bordered" id="entriesTable">
        <thead>
            <tr>
                <th>ID</th>
                <th>Type</th>
                <th>Content Title</th>
                <th>Content Detail</th>
                <th>Code</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in data)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.type</td>
                    <td>@item.content_title</td>
                    <td>@item.content_detail</td>
                    <td>@item.code</td>
                </tr>
            }
        </tbody>
    </table>
</div>
